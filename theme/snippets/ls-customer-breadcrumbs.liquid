<nav aria-label="{{ 'general.breadcrumb.title' | t }}" class="breadcrumb">
  <ol class="breadcrumb__list" role="list">
    <li class="breadcrumb__item">
      <a class="breadcrumb__link link" href="{{ routes.root_url }}">{{ 'general.breadcrumb.home' | t }}</a> {%- render 'icon', icon: 'arrow-right' -%}
    </li>
    {%- if request.page_type == 'customers/account' -%}
      <li class="breadcrumb__item">
        <span class="breadcrumb__link" aria-current="page">{{ 'customer.general.my_account' | t }}</span>
      </li>
    {%- else -%}
      <li class="breadcrumb__item">
        <a class="breadcrumb__link link" href="{{ routes.account_url }}">{{ 'customer.general.my_account' | t }}</a> {%- render 'icon', icon: 'arrow-right' -%}
      </li>
      {%- if request.page_type == 'customers/order' -%}
        <li class="breadcrumb__item">
          <span class="breadcrumb__link" aria-current="page">{{ current_page_label | t: order_number: order.name }}</span>
        </li>
      {%- else -%}
        <li class="breadcrumb__item">
          <span class="breadcrumb__link" aria-current="page">{{ current_page_label | t }}</span>
        </li>
      {%- endif -%}
    {%- endif -%}
  </ol>
</nav>
